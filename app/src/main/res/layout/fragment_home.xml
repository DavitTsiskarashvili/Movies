<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_01_black"
    tools:context=".presentation.ui.HomeFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        style="@style/hintMontserrat_Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        android:background="@drawable/background_filter_focused"
        android:backgroundTint="@color/neutral_02_darkest_grey"
        android:hint="@string/search"
        app:layout_constraintEnd_toStartOf="@id/filterImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/filterImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16_dp"
        android:background="@null"
        android:src="@drawable/ic_filter_not_clicked"
        app:layout_constraintBottom_toBottomOf="@id/searchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchView"
        app:layout_constraintTop_toTopOf="@id/searchView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nowShowingButton"
        style="@style/smallMontserrat_ButtonFocused"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="@drawable/background_filter_focused"
        android:paddingHorizontal="@dimen/dimen_20_dp"
        android:text="@string/now_showing"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/comingSoonButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/comingSoonButton"
        style="@style/smallMontserrat_Button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/background_filter_unfocused"
        android:text="@string/coming_soon"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/nowShowingButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nowShowingButton"
        app:layout_constraintTop_toTopOf="@id/nowShowingButton"
        app:layout_goneMarginStart="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleTextView"
        style="@style/normalMontserrat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginTop="@dimen/dimen_22_dp"
        android:text="@string/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nowShowingButton" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/moviesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dimen_16_dp"
        android:layout_marginTop="@dimen/dimen_16_dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/homeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:spanCount="2"
        tools:listitem="@layout/movie_item" />

    <com.movies.presentation.ui.NavigationCustomView
        android:id="@+id/homeButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_62_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>