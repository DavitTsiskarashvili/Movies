<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_01_black"
    android:paddingVertical="@dimen/dimen_20_dp"
    tools:context=".presentation.details.ui.DetailsFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="@dimen/dimen_16_dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toStartOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleTextView"
        style="@style/normalMontserrat_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16_dp"
        android:gravity="center"
        android:text="@string/details"
        app:layout_constraintBottom_toBottomOf="@id/backImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/backImageButton"
        app:layout_constraintTop_toTopOf="@+id/backImageButton"
        tools:text="@tools:sample/lorem" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backImageButton">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/posterImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/movieTitleTextView"
                style="@style/bigMontserrat_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:layout_marginTop="@dimen/dimen_26_dp"
                app:layout_constraintEnd_toStartOf="@id/favouritesToggleButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/posterImageView"
                tools:text="@tools:sample/lorem" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/favouritesToggleButton"
                android:layout_width="@dimen/dimen_20_dp"
                android:layout_height="@dimen/dimen_20_dp"
                android:layout_marginTop="@dimen/dimen_26_dp"
                android:layout_marginEnd="@dimen/dimen_16_dp"
                android:background="@drawable/ic_favourites_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/movieTitleTextView"
                app:layout_constraintTop_toBottomOf="@id/posterImageView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ratingTextView"
                style="@style/smallMontserrat_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:layout_marginEnd="@dimen/dimen_8_dp"
                android:background="@drawable/textview_background"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="@dimen/dimen_4_dp"
                android:paddingHorizontal="@dimen/dimen_10_dp"
                android:paddingVertical="@dimen/dimen_4_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movieTitleTextView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/categoryTextView"
                style="@style/smallMontserrat_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:layout_marginEnd="@dimen/dimen_8_dp"
                android:background="@drawable/textview_background"
                android:paddingHorizontal="@dimen/dimen_10_dp"
                android:paddingVertical="@dimen/dimen_4_dp"
                app:layout_constraintStart_toEndOf="@id/ratingTextView"
                app:layout_constraintTop_toBottomOf="@id/movieTitleTextView"
                tools:text="@tools:sample/lorem" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/durationTextView"
                style="@style/smallMontserrat_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:layout_marginEnd="@dimen/dimen_8_dp"
                android:background="@drawable/textview_background"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="@dimen/dimen_4_dp"
                android:paddingHorizontal="@dimen/dimen_10_dp"
                android:paddingVertical="@dimen/dimen_4_dp"
                app:layout_constraintStart_toEndOf="@id/categoryTextView"
                app:layout_constraintTop_toBottomOf="@id/movieTitleTextView"
                tools:text="@tools:sample/date/hhmm" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/yearTextView"
                style="@style/smallMontserrat_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:layout_marginEnd="@dimen/dimen_8_dp"
                android:background="@drawable/textview_background"
                android:paddingHorizontal="@dimen/dimen_10_dp"
                android:paddingVertical="@dimen/dimen_4_dp"
                app:layout_constraintStart_toEndOf="@id/durationTextView"
                app:layout_constraintTop_toBottomOf="@id/movieTitleTextView"
                tools:text="@tools:sample/date/mmddyy" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/aboutTextView"
                style="@style/normalMontserrat_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:layout_marginTop="@dimen/dimen_26_dp"
                android:text="@string/about"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ratingTextView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/descriptionTextView"
                style="@style/smallMontserrat_Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16_dp"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:layout_marginBottom="@dimen/dimen_16_dp"
                android:textColor="@color/neutral_06_lighter_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/aboutTextView"
                tools:text="@tools:sample/lorem" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>