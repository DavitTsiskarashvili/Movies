<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neutral_01_black"
    android:paddingBottom="@dimen/dimen_4_dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        android:background="@drawable/background_filter_focused"
        android:backgroundTint="@color/neutral_02_darkest_grey"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/dimen_6_dp"
        android:drawableTint="@color/neutral_05_light_grey"
        android:gravity="center_vertical"
        android:hint="@string/search"
        android:paddingHorizontal="@dimen/dimen_24_dp"
        android:textColorHint="@color/neutral_05_light_grey"
        app:layout_constraintEnd_toStartOf="@id/filterImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/filterImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16_dp"
        android:background="@null"
        android:src="@drawable/ic_filter_not_clicked"
        app:layout_constraintBottom_toBottomOf="@id/searchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchView"
        app:layout_constraintTop_toTopOf="@id/searchView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nowShowingButton"
        style="@style/smallMontserrat_ButtonFocused"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_21_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="@drawable/background_filter_focused"
        android:paddingHorizontal="@dimen/dimen_12_dp"
        android:paddingVertical="@dimen/dimen_4_dp"
        android:text="@string/now_showing"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/comingSoonButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/comingSoonButton"
        style="@style/smallMontserrat_Button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/background_filter_unfocused"
        android:paddingHorizontal="@dimen/dimen_12_dp"
        android:paddingVertical="@dimen/dimen_4_dp"
        android:text="@string/coming_soon"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/nowShowingButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nowShowingButton"
        app:layout_constraintTop_toTopOf="@id/nowShowingButton"
        app:layout_goneMarginStart="20dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/filterViewGroup"
        app:constraint_referenced_ids="comingSoonButton, nowShowingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>